{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/ProdtestApi/ProdtestApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/ProdtestApi/ProdtestApi.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "dependsOn": ["clean-test"],
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/src/ProdtestApi.Test/ProdtestApi.Test.csproj",
        "--collect: \"XPlat Code Coverage\""
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "clean-test",
      "dependsOn": [],
      "command": "rm",
      "type": "process",
      "args": ["-rf", "${workspaceFolder}/src/ProdtestApi.Test/TestResults"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
